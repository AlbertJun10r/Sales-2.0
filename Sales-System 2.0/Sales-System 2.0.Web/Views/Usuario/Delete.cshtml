@model Sales_System_2._0.Application.Dtos.Usuario.UsuarioDtoRemove


@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Store</h1>

<div class="card bg-light col-6 offset-3" style="width:600px; font-family:'Times New Roman', Times, serif">
    <div class="card-header">
        <h3>Are you sure you want to delete this?</h3>
        <hr />
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID Usuario:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Nombre Completo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Usuario Eliminado:</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Eliminado)</dd>

            <dt class="col-sm-3">Fecha Eliminado:</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => DateTime.Now) </dd>
        </dl>
        <div class="card-footer">
            <form asp-controller="usuario" asp-action="Delete" method="post">
                <input asp-for="Id" type="hidden" />
                <input asp-for="Nombre" type="hidden" />
                <input asp-for="Eliminado" type="hidden" />                                
                <button type="submit" class="btn btn-danger">Delete</button> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>